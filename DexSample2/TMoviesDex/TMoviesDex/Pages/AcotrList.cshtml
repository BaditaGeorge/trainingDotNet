@page
@{
    ViewData["Title"] = "AcotrList";
}

<h2>AcotrList</h2>

@(Html.DevExtreme().DataGrid<TMoviesDex.Models.Actor>()
    .DataSource(ds => ds.Mvc()
        .Controller("SampleActors")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ActorId")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ActorId);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Birthdate);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
